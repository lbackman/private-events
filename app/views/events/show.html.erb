<h1>Event Information</h1>

<div id="<%= dom_id @event %>">
  <p>
    <strong>Host:</strong>
    <%= @event.creator.email %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @event.date %>
  </p>

</div>

<% if current_user.id == @event.creator_id %>
  <div><%= link_to "Send invites", new_event_invite_path(event_id: @event.id) %></div>
  <% if Invite.where(event_id: @event.id).any? %>
    <div><%= link_to "View invites sent", event_invites_path(event_id: @event.id) %></div>
  <% end %>
   <div>
    <%= link_to "Cancel event",
            event_path(event_id: @event.id),
            data: { 
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to cancel this event?"
              } %>
    </div>
<% end %>

<div><%= link_to "Back to events", root_path %></div>