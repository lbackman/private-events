<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <div class="event">
      <div class="time">
        Date: <%= link_to date_informal(event.date), event_path(event) %>
      </div>
      <div class="creator">
        Host: <%= link_to event.creator.username, user_path(event.creator) %>
      </div>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Event', 'events/new' %>