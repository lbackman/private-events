<% if events.any? %>
  <h2><%= "#{event_when}"%> events</h2>
  <div id="<%="#{event_when.downcase}_events"%>">
    <% events.each do |event| %>
      <div class="event">
        <div class="time">
          Date: <%= link_to date_informal(event.date), event_path(event) %>
        </div>
        <div class="creator">
          Host: <%= link_to event.creator.username, user_path(event.creator) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
